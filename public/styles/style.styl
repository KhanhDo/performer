@import 'nib'

#canvas
  width 100%
  height 800px

.playerArea
  width 300px
  height 100px
  background-color #005396
  position fixed
  top 0
  left 0

.playerControls
  display block
  margin auto
  width 30%
  list-style none
  z-index 4

.player-pauseBtn
  display none

.player-playBtn
  width 40px
  height 40px
  border-radius 25px;
  border 1px solid #c55500

.player-progress-container
  width 200px
  height 10px
  position fixed
  top 100px
  left 0
  border 1px solid black

.player-progress-bar
  background-color red
  width 0px
  height 10px 
