@import 'nib'

btnBgColor = #002222
defaultMargin = 1em
linkColor = black

.main-container
  font-family source-sans-pro, sans-serif

#canvas
  width 100%
  height 600px

.first-level-area
  width 250px
  height 30px
  position relative
  top 0
  left 0
  border-radius 5px
  margin auto

.player-controls
  position relative
  display inline-block
  line-height 30px
  list-style none
  z-index 4
  width 40px
  padding-left 10px
  overflow hidden
  -webkit-padding-start 0px
  margin 0px
  li
    float: left
    display block
    width 30px
    cursor pointer
    transition text-shadow .3s 
    text-decoration none
    :hover
      color black
      text-shadow 0px 0px 20px
    :after
      text-decoration none
      color #09B492

.tempo-changer
  margin-bottom 5px
  display block
  position relative

.info-container
  position relative
  float right

.player-pauseBtn
  display none

.player-progress-container
  width 200px
  height 20px
  position relative
  border 1px solid #25BFDA
  border-radius 2px
  display inline-block
  vertical-align top
  margin-top 2px

#song-menu
  position relative
  list-style-type none


.player-progress-bar
  background-color #25BFDA
  display inline-block
  width 0px
  height 18px 

.player-songList
  margin-bottom 5px
  position relative
  list-style none

.upload-area
  margin-top 5px

.icons
  display inline-block
  height 20px
  margin: 0px
  position relative
  width 20px

  .icons-drop-up
    background-color: #EBEBEB
    bottom: 35px
    color: #1D1D1D
    margin: 0 0 -10px -20px
    opacity: 0
    position: absolute
    vertical-align: bottom
    visibility: hidden
    transition margin 0.2s ease, opacity 0.2s ease, visibility 0s ease 0.2s

  .icons-drop-up:after
    border-left 10px solid transparent
    border-right 10px solid transparent
    border-top 10px solid gray
    content: ""
    left: 50%
    margin: 0 0 -10px -10px
    position: absolute
    bottom: 0px

  .icons-drop-up2
    background-color: #EBEBEB
    bottom: -20px
    color: #1D1D1D
    margin: 0 0 0px -20px
    opacity: 0
    position: absolute
    vertical-align: bottom
    visibility: hidden
    transition margin 0.2s ease, opacity 0.2s ease, visibility 0s ease 0.2s

  .icons-drop-up2:after
    border-top 10px solid transparent
    border-bottom 10px solid transparent
    border-left 10px solid gray
    content: ""
    right: 0
    margin: 0 -10px 0 0
    position: absolute
    bottom: 25px

.icons:hover .icons-drop-up
  margin: 0 0 0 -50px
  opacity: 1
  visibility: visible
  transition: margin 0.2s ease, opacity 0.2s ease, visibility 0s ease 0s

.icons:hover .icons-drop-up2
  margin: 0 0 0 -50px
  opacity: 1
  visibility: visible
  transition: margin 0.2s ease, opacity 0.2s ease, visibility 0s ease 0s

.speed-options
  width 175px
  left -30px
  border-radius 3px
  padding 5px

.info-box
  width 450px
  height 470px
  border-radius 3px
  padding 10px
  left -167px

.second-level-area
  width 250px
  height 35px
  margin auto

.current-song
  margin-left 17px
  font-size 18px
  display inline

.third-level-content
  margin 0px auto
  width 250px

.song-list-box
  right 35px
  width 270px

#app-title
  margin-left 25%
  display inline-block
  font-size 20px
  color #FF0238
  font-weight bold

.song-item
  cursor pointer

.song-item:hover
    color #25BFDA

.share-buttons
  width 250px
  height 35px
  margin 10px auto

.twitter-button
  display inline-block

.facebook-button
  display inline-block
  height 26px

