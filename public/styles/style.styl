@import 'nib'

btnBgColor = #002222
defaultMargin = 1em
linkColor = black

body
  font-family 'Oxygen', sans-serif

#canvas
  width 100%
  height 800px

.player-area
  width 260px
  height 200px
  background-color #E8E8E8
  position relative
  top 0
  left 0
  padding 10px
  border-radius 5px

.player-controls
  position relative
  display inline-block
  line-height 30px
  list-style none
  z-index 4
  width 40px
  padding-left 10px
  overflow hidden
  -webkit-padding-start 0px
  margin 0px
  li
    float: left
    display block
    width 30px
    cursor pointer
    margin-left 5px
    // border 2px solid #099DAA
    // border-radius 30px
    transition text-shadow .3s 
    text-decoration none
    color #09B492
    :hover
      color black
      text-shadow 0px 0px 20px
    :after
      text-decoration none
      color #09B492

.tempo-changer
  margin-bottom 5px
  display block
  position relative

.player-pauseBtn
  display none

.player-progress-container
  width 200px
  height 20px
  position relative
  border 2px solid #09B492
  border-radius 2px
  display inline-block
  vertical-align top
  margin-top 2px

#song-menu
  position relative
  list-style-type none


.player-progress-bar
  background-color #9D304F
  width 0px
  height 20px 

.player-songList
  margin-bottom 5px
  position relative

.upload-area
  margin-top 5px






































